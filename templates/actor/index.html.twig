{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Les acteurs{% endblock %}

{% block body %}
    <h1 class="text-center">Acteurs</h1>
    <div class="container actor-index">
        <div class="row mx-0 ml-md-3 justify-content-center justify-content-md-start">
            {% for actor in actors %}
                <div class="card mb-3" style="width: 16rem; height: 15rem;">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h2 class="card-title">{{ loop.index }} - {{ actor.name }}</h2>
                        <a href="{{ path("actor_show", { id: actor.id }) }}" class="card-link">
                            Voir ses séries
                        </a>
                    </div>
                </div>
            {% else %}
                Aucun acteur trouvé.
            {% endfor %}
        </div>

        <div class="back my-4">
            <a href="{{ path('app_index') }}">
                Retour à l'accueil
            </a>
        </div>
    </div>
{% endblock %}