{% extends 'base.html.twig' %}

{% block title %}{{ 'season.season'|trans }}{% endblock %}

{% block body %}
    <h1>Saison</h1>
    <div class="container show">
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>{{ 'number'|trans }}</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>{{ 'year'|trans }}</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>{{ 'description'|trans }}</th>
                <td>{{ season.description }}</td>
            </tr>
            </tbody>
        </table>

        <div class="back d-flex justify-content-center my-4">
            <a class="btn mr-5" href="{{ path('admin_season_edit', {'id': season.id}) }}">{{ 'update'|trans }}</a>

            {{ include('season/_delete_form.html.twig') }}
        </div>
        <a href="{{ path('admin_season_index') }}">{{ 'back'|trans }}</a>
    </div>
{% endblock %}
