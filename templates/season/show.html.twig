{% extends 'base.html.twig' %}

{% block title %}Saison{% endblock %}

{% block body %}
    <h1>Saison</h1>
    <div class="container show">
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ season.description }}</td>
            </tr>
            </tbody>
        </table>

        <div class="back d-flex justify-content-center my-4">
            <a class="btn mr-5" href="{{ path('season_edit', {'id': season.id}) }}">Modifier</a>

            {{ include('season/_delete_form.html.twig') }}
        </div>
        <a href="{{ path('season_index') }}">Retour</a>
    </div>
{% endblock %}
