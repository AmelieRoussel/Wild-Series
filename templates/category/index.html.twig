{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | {{ 'category.category'|trans }}{% endblock %}

{% block body %}
    <h1 class="text-center">{{ 'category.category'|trans }}</h1>
    <div class="container category-index">
        <div class="row mx-0 ml-md-3 justify-content-center justify-content-md-start">
            {% for category in categories %}
                <div class="card mb-3" style="width: 16rem; height: 10rem;">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h2 class="card-title">{{ loop.index }} - {{ category.name }}</h2>
                        <a href="{{ path("category_show", { category: category.id }) }}" class="card-link">
                            {{ 'program.show'|trans }}
                        </a>
                    </div>
                </div>
            {% else %}
                {{ 'no-result'|trans }}
            {% endfor %}
        </div>

        <div class="back my-4">
            <a href="{{ path('app_index') }}">
                {{ 'back'|trans }}
            </a>
        </div>
    </div>
{% endblock %}