{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Les catégories{% endblock %}

{% block body %}
    <h1 class="text-center">Catégories</h1>
    <div class="container category-index">
        <div class="row mx-0 justify-content-center justify-content-md-start">
            {% for category in categories %}
                <div class="card mb-3" style="width: 16rem; height: 15rem;">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h2 class="card-title">{{ loop.index }} - {{ category.name }}</h2>
                        <a href="{{ path("category_show", { categoryName: category.name }) }}" class="card-link">
                            Voir les séries
                        </a>
                    </div>
                </div>
            {% else %}
                Aucune categorie trouvée.
            {% endfor %}
        </div>

        <div class="back my-4">
            <a href="{{ path('app_index') }}">
                Retour à l'accueil
            </a>
        </div>
    </div>
{% endblock %}