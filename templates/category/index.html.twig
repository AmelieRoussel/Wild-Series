{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <h1 class="text-center my-4">Catégories</h1>
    <div class="container category-index">
        <div class="row">
            {% for category in categories %}
                <div class="card mb-3" style="width: 16rem; height: 15rem;">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h2 class="card-title">{{ loop.index }} - {{ category.name }}</h2>
                        <a href="{{ path("category_show", { categoryName: category.name }) }}" class="card-link">Voir les séries</a>
                    </div>
                </div>
            {% else %}
                Aucune categorie trouvée.
            {% endfor %}
        </div>

        <div><a href="{{ path('category_new') }}">
                Ajouter une catégorie
            </a></div>
        <a href="{{ path('app_index') }}">
            Retour à l'accueil
        </a>
    </div>
{% endblock %}