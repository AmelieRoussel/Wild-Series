{% extends 'base.html.twig' %}

{% block title %}{{ 'episode.episode'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'episode.episode'|trans }}</h1>
    <div class="container show">
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>{{ 'title'|trans }}</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>{{ 'number'|trans }}</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>{{ 'synopsis'|trans }}</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
            </tbody>
        </table>

        <div class="back d-flex justify-content-center my-4">
            <a class="btn mr-5" href="{{ path('admin_episode_edit', {'slug': episode.slug}) }}">{{ 'update'|trans }}</a>

        {{ include('episode/_delete_form.html.twig') }}
    </div>
        <a href="{{ path('admin_episode_index') }}">{{ 'back'|trans }}</a>
    </div>
{% endblock %}
