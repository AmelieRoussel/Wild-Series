{% extends 'base.html.twig' %}

{% block title %}{{ 'episode.episode'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'episode.index'|trans }}</h1>
    <div class="container show">
        <div class="my-4">
            <a class="btn" href="{{ path('admin_episode_new') }}">{{ 'episode.add'|trans }}</a>
        </div>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>{{ 'title'|trans }}</th>
                <th>{{ 'number'|trans }}</th>
                <th>{{ 'synopsis'|trans }}</th>
                <th>{{ 'action'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for episode in episodes %}
                <tr>
                    <td>{{ episode.id }}</td>
                    <td>{{ episode.title }}</td>
                    <td>{{ episode.number }}</td>
                    <td>{{ episode.synopsis }}</td>
                    <td>
                        <a href="{{ path('admin_episode_show', {'slug': episode.slug}) }}">{{ 'show'|trans }}</a>
                        <a href="{{ path('admin_episode_edit', {'slug': episode.slug}) }}">{{ 'update'|trans }}</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">{{ 'no-result'|trans }}/td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
