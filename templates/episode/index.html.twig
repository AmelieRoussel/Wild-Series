{% extends 'base.html.twig' %}

{% block title %}Épisodes{% endblock %}

{% block body %}
    <h1>Liste des épisodes</h1>
    <div class="container show">
        <div class="my-4">
            <a class="btn" href="{{ path('episode_new') }}">Ajouter un épisode</a>
        </div>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Number</th>
                <th>Synopsis</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for episode in episodes %}
                <tr>
                    <td>{{ episode.id }}</td>
                    <td>{{ episode.title }}</td>
                    <td>{{ episode.number }}</td>
                    <td>{{ episode.synopsis }}</td>
                    <td>
                        <a href="{{ path('episode_show', {'slug': episode.slug}) }}">Afficher</a>
                        <a href="{{ path('episode_edit', {'slug': episode.slug}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
