{% extends 'base.html.twig' %}
{% block title %}Saison #{{ season.number }} de {{ program.title }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">Saison {{ season.number }} de {{ program.title }} ({{ season.year }})</h1>
            <p>{{ season.description }}</p>
            <h2>Liste des épisodes</h2>
            <ul>
                {% for episode in season.episodes %}
                    <li>
                        <a href="">Épisode {{ episode.number }} : {{ episode.title }}</a>
                    </li>
                {% else %}
                    Aucun épisode
                {% endfor %}
            </ul>
        </div>
    </div>

    <a href="{{ path("program_show", { id: program.id }) }}">
        Retour
    </a>

{% endblock %}