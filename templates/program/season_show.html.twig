{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} | {{ program.title }} | Saison {{ season.number }}{% endblock %}

{% block body %}
    <h1 class="text-center">{{ program.title }}</h1>
    <div class="container program-show">
        <div class="row mx-0">
            <div class="card flex-md-row mb-3">
                <div class="card-img text-center m-md-4">
                    <img src="{{ program.poster }}" alt="{{ program.title }} poster">
                </div>
                <div class="card-body d-flex flex-column">
                    <h2 class="card-title">Saison {{ season.number }} ({{ season.year }})</h2>
                    <p>{{ season.description }}</p>
                    <div class="d-flex flex-column mt-5">
                        <p>Liste des épisodes :</p>
                        {% for episode in season.episodes %}
                            <a href="{{ path("program_episode_show", { program: program.id , season: season.id, episode: episode.id }) }}">
                                Épisode {{ episode.number }} : {{ episode.title }}
                            </a>
                        {% else %}
                            Aucun épisode
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>

        <div class="back my-4">
            <a href="{{ path("program_show", { slug: program.slug }) }}">
                Retour
            </a>
        </div>
    </div>

{% endblock %}