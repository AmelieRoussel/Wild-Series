{% extends 'base.html.twig' %}

{% block title %}Séries{% endblock %}

{% block body %}
    <h1>Liste des séries</h1>
    <div class="container show">
        <div class="my-4">
            <a class="btn" href="{{ path('admin_program_new') }}">Ajouter une série</a>
        </div>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Catégorie</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for program in programs %}
                <tr>
                    <td>{{ program.id }}</td>
                    <td>{{ program.title }}</td>
                    <td>{{ program.category.name }}</td>
                    <td>{{ program.summary }}</td>
                    <td>
                        <a class="btn" href="{{ path('admin_program_show', {'slug': program.slug}) }}">Afficher</a>
                        <a class="btn" href="{{ path('admin_program_edit', {'slug': program.slug}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
