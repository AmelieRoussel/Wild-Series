{% extends 'base.html.twig' %}

{% block title %}{{ 'program.program'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'program.index'|trans }}</h1>
    <div class="container show">
        <div class="my-4">
            <a class="btn" href="{{ path('admin_program_new') }}">{{ 'program.add'|trans }}</a>
        </div>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>{{ 'name'|trans }}</th>
                <th>{{ 'category.category'|trans }}</th>
                <th>{{ 'description'|trans }}</th>
                <th>{{ 'action'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for program in programs %}
                <tr>
                    <td>{{ program.id }}</td>
                    <td>{{ program.title }}</td>
                    <td>{{ program.category.name }}</td>
                    <td>{{ program.summary }}</td>
                    <td>
                        <a class="btn" href="{{ path('admin_program_show', {'slug': program.slug}) }}">{{ 'show'|trans }}</a>
                        <a class="btn" href="{{ path('admin_program_edit', {'slug': program.slug}) }}">{{ 'update'|trans }}</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">{{ 'no-result'|trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
