{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} | {{ program.title }}{% endblock %}

{% block body %}
    <h1 class="text-center">{{ program.title }} - Saison {{ season.number }}</h1>
    <div class="container program-show">
        <div class="row mx-0">
            <div class="card flex-md-row mb-3">
                <div class="card-img text-center m-md-4">
                    <img src="{{ program.poster }}" alt="{{ program.title }} poster">
                </div>
                <div class="card-body d-flex flex-column">
                    <h2 class="card-title">Ã‰pisode {{ episode.number }} : {{ episode.title }}</h2>
                    <p>{{ season.description }}</p>
                </div>
            </div>
        </div>

        <h3 class="text-center my-5">Commentaires</h3>
        {% for comment in episode.comments %}
            <div class="row mx-0 comment">
                <div class="card col my-5 pt-3">
                    <p>De : {{ comment.author.email }}</p>
                    <p>{{ comment.comment }}</p>
                    <p>{{ comment.rate }}/20</p>
                </div>
            </div>
        {% else %}
            <p class="text-center text-light">Pas de commentaire</p>
        {% endfor %}

        {% if app.user %}
            <div class="container mt-5 form">
                <h3 class="text-center">Laisser un commentaire</h3>
                <div class="col">
                    {{ form_start(form) }}
                    {{ form_errors(form) }}
                    {{ form_widget(form) }}
                    <div class="col button text-center">
                        <button type="submit" class="btn">Envoyer</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        {% endif %}

        <div class="back my-4">
            <a href="{{ path("program_season_show", { 'program_slug': program.slug , season: season.id }) }}">
                Retour
            </a>
        </div>
    </div>
{% endblock %}