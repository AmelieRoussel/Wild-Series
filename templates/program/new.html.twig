{% extends "base.html.twig" %}

{% block title %}{{ parent() }} | Ajouter une série{% endblock %}

{% block body %}
    <h1 class="text-center my-4">Ajouter une nouvelle série</h1>
    <div class="container form">
        <div class="col-md-6 offset-md-3 my-5">
            {{ form_errors(form) }}
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="col button text-center">
                <button type="submit" class="btn">Ajouter</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}